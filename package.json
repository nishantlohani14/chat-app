{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "A Node.js chat application with Express, Socket.IO, and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": ["express", "socket.io", "typescript", "websocket", "chat"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.2",
    "ts-node-dev": "^2.0.0",
    "rimraf": "^5.0.5"
  }
}
